---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';

interface Props {
  title?: string;
  hero?: string;
  description?: string;
  ogImage?: string;
}

const { title, hero, description, ogImage } = Astro.props;

// Use custom OG image if provided, otherwise use hero image
const finalOgImage = ogImage || hero;
---

<BaseLayout
  title={title}
  description={description}
  ogImage={finalOgImage}
>
  {hero && (
    <link slot="head" rel="preload" as="image" href={hero} fetchpriority="high" />
  )}
  <Header client:idle />

  <main class="page-layout">
    {hero && (
      <div class="hero">
        <img src={hero} alt={title || 'Page hero'} fetchpriority="high" />
      </div>
    )}

    <div class="page-content">
      {title && <h1>{title}</h1>}
      <div class="prose">
        <slot />
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .page-layout {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .hero {
    margin: -2rem -1rem 2rem;
    max-height: 300px;
    overflow: hidden;
  }

  .hero img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .page-content h1 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 2rem 0;
    color: var(--text-primary);
  }

  .prose {
    line-height: 1.7;
    color: var(--text-primary);
  }

  @media (max-width: 768px) {
    .page-content h1 {
      font-size: 2rem;
    }
  }
</style>
