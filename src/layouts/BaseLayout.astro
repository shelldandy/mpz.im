---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
  ogUrl?: string;
}

const {
  title = 'Miguel Palau',
  description = 'Personal website and blog',
  ogImage,
  ogType = 'website',
  ogUrl
} = Astro.props;

const pageTitle = title === 'Miguel Palau' ? title : `${title} | Miguel Palau`;
const siteUrl = 'https://mpz.im';
const defaultOgImage = `${siteUrl}/favicon.svg`;

// Convert relative URLs to absolute URLs for OG image (required by Open Graph Protocol)
const finalOgImage = ogImage
  ? ogImage.startsWith('http')
    ? ogImage
    : `${siteUrl}${ogImage.startsWith('/') ? ogImage : `/${ogImage}`}`
  : defaultOgImage;

const canonicalUrl = ogUrl || Astro.url.href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>

    <!-- Open Graph Protocol -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={finalOgImage} />
    <meta property="og:site_name" content="Miguel Palau" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={finalOgImage} />

    <script is:inline>
      // Prevent FOUC by setting theme before page renders
      const theme = localStorage.getItem('theme') ||
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.setAttribute('data-theme', theme);
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
