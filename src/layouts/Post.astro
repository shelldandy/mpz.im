---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';

interface Props {
  title: string;
  date: Date;
  hero?: string;
  description?: string;
  ogImage?: string;
}

const { title, date, hero, description, ogImage } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(date);

// Use custom OG image if provided, otherwise use hero image, otherwise use default
const finalOgImage = ogImage || hero;
// Use custom description if provided, otherwise use default
const finalDescription = description || 'Read this post on Miguel Palau\'s blog';
---

<BaseLayout
  title={title}
  description={finalDescription}
  ogImage={finalOgImage}
  ogType="article"
>
  <Header client:load />

  <main class="post-layout">
    {hero && (
      <div class="hero">
        <img src={hero} alt={title} />
      </div>
    )}

    <article class="post-content">
      <header class="post-header">
        <h1>{title}</h1>
        <time datetime={date.toISOString()}>{formattedDate}</time>
      </header>

      <div class="prose">
        <slot />
      </div>
    </article>
  </main>

  <Footer />
</BaseLayout>

<style>
  .post-layout {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .hero {
    margin: -2rem -1rem 2rem;
    max-height: 400px;
    overflow: hidden;
  }

  .hero img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-header {
    margin-bottom: 2rem;
  }

  .post-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 0.5rem 0;
    color: var(--text-primary);
  }

  .post-header time {
    color: var(--text-secondary);
    font-size: 0.95rem;
  }

  .prose {
    line-height: 1.7;
    color: var(--text-primary);
  }

  @media (max-width: 768px) {
    .post-header h1 {
      font-size: 2rem;
    }
  }
</style>
