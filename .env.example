# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram chat ID to receive contact form messages
# You can get this by messaging your bot and visiting:
# https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
TELEGRAM_CHAT_ID=your_chat_id_here

# Cloudflare Turnstile (Captcha)
# Get your keys from: https://dash.cloudflare.com/turnstile
# PUBLIC_TURNSTILE_SITE_KEY is exposed to the browser
PUBLIC_TURNSTILE_SITE_KEY=your_site_key_here
# TURNSTILE_SECRET_KEY is used server-side only
TURNSTILE_SECRET_KEY=your_secret_key_here
